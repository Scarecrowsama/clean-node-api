    "esModuleInterop": true,
    "rootDirs": ["src"],
    "strictNullChecks": false,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src"
  ]
}
